<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvHistoryConversationAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/ivHistoryConversationAvatar"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:adjustViewBounds="true"
            tools:src="@color/gradientLightGreen" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/mcvHistoryConversationAvatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHistoryConversationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvHistoryConversationLatestMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            tools:text="Latest Message"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>
