<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.favorite.note.NoteActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNoteBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_round_arrow_back_24" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNoteDelete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_round_delete_24" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNoteTheme"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toStartOf="@id/btnNoteDelete"
        android:background="@color/transparent"
        android:src="@drawable/ic_round_delete_24"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtNoteTitle"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLines="1"
        android:inputType=""
        android:layout_below="@id/btnNoteBack"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/title" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtNoteContent"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:layout_below="@id/edtNoteTitle"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/start_typing" />

</RelativeLayout>
