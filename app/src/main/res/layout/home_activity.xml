<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.dcom.presentation.widget.CustomViewPager
        android:id="@+id/cvpHomePager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/ivHomeDivider"
        android:layout_alignParentTop="true"
        android:overScrollMode="never" />

    <ImageView
        android:id="@+id/ivHomeDivider"
        android:background="@color/gray_message"
        android:layout_above="@id/cbnHomeNavigation"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <com.example.dcom.presentation.widget.CustomBottomNavigation
        android:id="@+id/cbnHomeNavigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
