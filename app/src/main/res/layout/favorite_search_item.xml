<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/favoriteBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="100dp"
        android:layout_marginVertical="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/favoriteSearchBackground"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnFavoriteSearchIcon"
                android:layout_width="wrap_content"
                android:background="@color/transparent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_toEndOf="@id/btnFavoriteSearchIcon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_note" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
